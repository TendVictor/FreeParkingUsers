<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="0.5dp"
    android:background="#d1d9df">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_seller"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_centerVertical="true"
            android:layout_margin="16dp"
            android:layout_weight="1.0"
            android:background="@drawable/default_img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="2.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_seller_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="left|bottom"
                android:text="汉堡王送停车券"
                android:textColor="#1b1b1b"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_seller_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="left|center"
                android:text="济南高新区万达广场"
                android:textColor="#5e5e5e"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_seller_contact"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.0"
                android:gravity="left|top"
                android:text="使用期限 2016.7.1-2016.7.8"
                android:textColor="#5e5e5e"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>