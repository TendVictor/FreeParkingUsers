<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTitleBar">

        <ImageView
            android:id="@+id/btnPrevious"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:background="@drawable/back_btn_bg"
            android:clickable="true"
            android:onClick="onClick"
            android:padding="8dp"
            android:src="@drawable/back_btn_img" />

        <TextView
            android:id="@+id/tvCampaignName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:maxLines="1"
            android:maxWidth="240dp"
            android:text="哈根达斯冰淇淋一分店喵喵喵喵喵喵"
            android:textColor="@color/colorTitleText"
            android:textSize="@dimen/text_size_larger" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBackground">

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCampaignImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="28dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/colorItemBackground"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/text_horizontal_margin2"
                    android:layout_height="@dimen/line_height_larger"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_horizontal_margin1"
                        android:text="活动时间"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height_larger"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvCampaignTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/colorTextDark"
                        android:textSize="@dimen/text_size_large" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorItemBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="@dimen/text_horizontal_margin2"
                    android:layout_height="@dimen/line_height_larger"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_horizontal_margin1"
                        android:text="活动详情"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCampaignDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="@dimen/text_horizontal_margin1"
                        android:paddingRight="@dimen/text_horizontal_margin1"
                        android:paddingTop="12dp"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_size_middle" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>