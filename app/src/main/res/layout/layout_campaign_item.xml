<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/campaign_item_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/text_horizontal_margin2"
        android:layout_height="@dimen/line_height_larger"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvCampaignNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_horizontal_margin1"
            android:text="活动一"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_larger"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvCampaignName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_horizontal_margin1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/text_size_large" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvCampaignDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/text_horizontal_margin1"
            android:ellipsize="middle"
            android:maxLines="3"
            android:paddingBottom="8dp"
            android:textColor="@color/colorTextDark"
            android:textSize="@dimen/text_size_middle" />

    </LinearLayout>
</LinearLayout>